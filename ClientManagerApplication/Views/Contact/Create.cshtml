@model ClientManagerApplication.Models.Contact

@{
    ViewBag.Title = "Create";
    ClientManagerApplication.Models.Person thePerson = ViewBag.thePerson;
}

<h3>
    Create a New Contact Record
</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.information_type, htmlAttributes: new { @class = "control-label col-md-2" })
